@model List<WebApplication.Models.ExamQuestion>

@{
    ViewData["Title"] = "Экзамен";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <h2 class="card-title mb-4" style="color:#3b82f6;">Экзамен</h2>

                    <form asp-action="SubmitExam" method="post">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">Вопрос @(i + 1)</h5>
                                    <p class="card-text">@Model[i].Question</p>
                                    
                                    <div class="options">
                                        @{
                                            var options = Model[i].Options.RootElement.EnumerateObject();
                                            foreach (var option in options)
                                            {
                                                <div class="form-check mb-3">
                                                    <input class="form-check-input" type="radio" 
                                                           name="answers[@Model[i].Id]" 
                                                           id="q@(Model[i].Id)_@option.Name" 
                                                           value="@option.Name" required>
                                                    <label class="form-check-label" for="q@(Model[i].Id)_@option.Name">
                                                        @option.Value.GetString()
                                                    </label>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="text-center">
                            <button type="submit" class="btn btn-gradient">
                                Завершить экзамен
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-input {
        width: 1.2em;
        height: 1.2em;
        margin-top: 0.2em;
    }

    .form-check-label {
        font-size: 1.1rem;
        padding-left: 0.5rem;
    }

    .btn-gradient {
        background: linear-gradient(45deg, #3b82f6, #2563eb);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        background: linear-gradient(45deg, #2563eb, #1d4ed8);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
    }
</style> 