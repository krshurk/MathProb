@{
    ViewData["Title"] = "Экзамен недоступен";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4" style="color:#3b82f6;">Экзамен недоступен</h2>
                    
                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading">Внимание!</h4>
                        <p class="mb-0">@ViewBag.Message</p>
                        <p class="mb-0 mt-2">Ваш текущий прогресс: @Math.Round(ViewBag.CourseCompletion)%</p>
                    </div>


                    <div class="d-flex justify-content-center gap-3">
                        <a asp-action="Index" class="btn btn-gradient">
                            Перейти к заданиям
                        </a>
                        <a asp-controller="Material" asp-action="Theory" class="btn btn-gradient">
                            Перейти к теории
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gradient {
        background: linear-gradient(45deg, #3b82f6, #2563eb);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-gradient:hover {
        background: linear-gradient(45deg, #2563eb, #1d4ed8);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
    }

    .alert {
        border: none;
        border-radius: 10px;
    }
</style> 