@model WebApplication.Models.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 p-2">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4" style="color:#2563eb;">Вход в систему</h2>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Пароль</label>
                            <input type="password" asp-for="Password" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Запомнить меня</label>
                        </div>
                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-gradient btn-lg">Войти</button>
                        </div>
                    </form>
                    <div class="text-center mt-4">
                        <p class="mb-0">Нет аккаунта? <a asp-action="Register" class="text-decoration-none" style="color:#2563eb;">Зарегистрироваться</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 