@model IEnumerable<WebApplication.Models.Material>

@{
    ViewData["Title"] = "Теоретические материалы";
}

<div class="container py-5">
    <h1 class="mb-5 fw-bold" style="color:#2563eb;">Учебные материалы</h1>
    <div class="row g-4">
        @foreach (var material in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-lg border-0 h-100" onclick="window.location.href='@Url.Action("Details", new { id = material.Id })'"
                     style="cursor: pointer; transition: transform 0.2s;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title mb-3 fw-bold">@material.Title</h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>